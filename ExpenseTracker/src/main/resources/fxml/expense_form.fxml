<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.expensetracker.controller.ExpenseFormController"
      alignment="CENTER" 
      spacing="10"
      prefWidth="250">
      
      <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Add New Expense" styleClass="form-title"/>

    <TextField fx:id="txtTitle" promptText="Title" maxWidth="300"/>
    <TextField fx:id="txtAmount" promptText="Amount" maxWidth="300"/>
    <ComboBox fx:id="cmbCategory" promptText="Select Category" maxWidth="300"/>
    <DatePicker fx:id="datePicker" maxWidth="300"/>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnSave" text="Save" onAction="#onSave" styleClass="primary-btn"/>
        <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel" styleClass="secondary-btn"/>
    </HBox>
</VBox>
